<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#3F51B5"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/purple_500"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="@string/service_runing_notification"
        android:textColor="#FFFFFF"
        android:drawableLeft="@drawable/ic_launcher_foreground_24"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notification_level"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/ic_baseline_battery_std_24"
            />

        <TextView
            android:id="@+id/notification_temperature"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/temperature"
            />
    </LinearLayout>


</LinearLayout>