<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/notification_layout_style"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:drawableLeft="@drawable/ic_launcher_foreground_24"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:text="@string/service_runing_notification"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notification_level"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_battery_std_24"
            android:gravity="center_vertical"
            android:paddingStart="10dp" />

        <TextView
            android:id="@+id/notification_temperature"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/temperature"
            android:gravity="center_vertical"
            android:paddingStart="10dp" />
    </LinearLayout>


</LinearLayout>